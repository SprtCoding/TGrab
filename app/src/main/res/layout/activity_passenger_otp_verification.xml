<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".passenger_otp_verification">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="200dp"
            android:layout_height="170dp"
            android:src="@drawable/logo"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:contentDescription="@string/todo"/>

        <LinearLayout
            android:id="@+id/welcome_layout"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/logo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/verify_text"
                android:fontFamily="@font/comfortaa"
                android:textAlignment="center"
                android:textSize="10pt"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sample_num"
                android:fontFamily="@font/comfortaa"
                android:textAlignment="center"
                android:id="@+id/mobile"
                android:textSize="10pt"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/number_layout"
            android:layout_marginTop="20dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/welcome_layout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:gravity="center"
            android:padding="10dp"
            android:orientation="horizontal">

            <EditText
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/input_border"
                android:inputType="number"
                android:maxLength="1"
                android:gravity="center"
                android:imeOptions="actionNext"
                android:importantForAutofill="no"
                android:textStyle="bold"
                android:textColor="#0AC3FB"
                android:id="@+id/first_num"
                android:autofillHints="no"
                tools:ignore="LabelFor" />

            <EditText
                android:layout_marginStart="10dp"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/input_border"
                android:inputType="number"
                android:maxLength="1"
                android:gravity="center"
                android:imeOptions="actionNext"
                android:importantForAutofill="no"
                android:textStyle="bold"
                android:textColor="#0AC3FB"
                android:id="@+id/second_num"
                android:autofillHints="false"
                tools:ignore="LabelFor" />

            <EditText
                android:layout_marginStart="10dp"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/input_border"
                android:inputType="number"
                android:maxLength="1"
                android:gravity="center"
                android:imeOptions="actionNext"
                android:importantForAutofill="no"
                android:textStyle="bold"
                android:textColor="#0AC3FB"
                android:id="@+id/third_num"
                android:autofillHints="false"
                tools:ignore="LabelFor" />

            <EditText
                android:layout_marginStart="10dp"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/input_border"
                android:inputType="number"
                android:maxLength="1"
                android:gravity="center"
                android:imeOptions="actionNext"
                android:importantForAutofill="no"
                android:textStyle="bold"
                android:textColor="#0AC3FB"
                android:id="@+id/fourth_num"
                android:autofillHints="false"
                tools:ignore="LabelFor" />

            <EditText
                android:layout_marginStart="10dp"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/input_border"
                android:inputType="number"
                android:maxLength="1"
                android:gravity="center"
                android:imeOptions="actionNext"
                android:importantForAutofill="no"
                android:textStyle="bold"
                android:textColor="#0AC3FB"
                android:id="@+id/fifth_num"
                android:autofillHints="false"
                tools:ignore="LabelFor" />

            <EditText
                android:layout_marginStart="10dp"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/input_border"
                android:inputType="number"
                android:maxLength="1"
                android:gravity="center"
                android:imeOptions="actionNext"
                android:importantForAutofill="no"
                android:textStyle="bold"
                android:textColor="#0AC3FB"
                android:id="@+id/last_num"
                android:autofillHints="false"
                tools:ignore="LabelFor" />

        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_marginTop="30dp"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            app:layout_constraintTop_toBottomOf="@id/number_layout"
            app:cardBackgroundColor="#0AC3FB"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/submit_btn"
            app:cardCornerRadius="30dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/submit"
                android:fontFamily="@font/comfortaa_bold"
                android:layout_gravity="center"
                android:textAllCaps="true"
                android:letterSpacing=".1"
                android:textColor="@color/white"
                android:textSize="11pt"
                android:textStyle="bold"
                />

        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>